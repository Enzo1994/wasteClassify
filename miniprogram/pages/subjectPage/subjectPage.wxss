/* miniprogram/pages/subjectPage/subjectPage.wxss */

page{
    width: 100%;
    height: 100%;

}

.main{
    width: 100%;
    height: 100%;
    background-color: #eee;
}
.main ul{
    display: block;
    padding-top: 30rpx;
    width: 100%;
    height: 100%;
}

.main ul li{
    display: block;
    position: relative;
    margin: 0 auto 40rpx auto;
    width: 90%;
    height: 15%;
    border-radius: 25rpx;
    /* box-shadow: 6rpx 6rpx 10rpx #ccc; */
    background-color: #fff;
}
.main ul li image{
    margin-left: 10%;
    width: 20%;
    height: 100%;
}
.main ul li span{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    font-size: 50rpx;
}
