/* miniprogram/pages/subjectPage/subjectPage.wxss */

page{
    width: 100%;
    height: 100%;

}
.header{
  display: flex;
  justify-content: center;
}
.header image{
  width: 100%
}
.header h1{
  position: absolute;
  top: 10%;
  z-index: 1000;
  font-size: 60px;
  font-weight: 400;
  font-family: '微软雅黑';
  color: rgb(31, 58, 146)
}

.main{
    margin-top: -70px;
    width: 100%;
    height: 100%;
    overflow:hidden;
}
.main ul{
    display: block;
    padding-top: 30rpx;
    width: 100%;
    height: 100%;
}

.main ul li{
    display: block;
    position: relative;
    margin: 0 auto 40rpx auto;
    width: 90%;
    height: 15%;
    border-radius: 25rpx;
    box-shadow: 6rpx 6rpx 10rpx #ccc;
    background-color: #fff;
}
.main ul li image{
    margin-left: 10%;
    width: 20%;
    height: 100%;
}
.main ul li span{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    font-size: 50rpx;
}
