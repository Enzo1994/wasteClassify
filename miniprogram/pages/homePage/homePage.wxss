.underline{
    display: inline-block;
    transition: border .3s ease;
    font-size: 40rpx!important;
    color: white;
    margin-top:-10rpx;
    padding-bottom: 5rpx;
    /* font-weight: 1000!important; */
    border-bottom: 5rpx solid orange;
}

.container{
    position: absolute;
    bottom: 0;
    width: 400%;
    height: 85%;
    overflow:auto;
    margin-top: -20px;
    margin-bottom: -20px;

}



.container>ul{
    transition: all 1s ease;
    /* min-height: calc ( 100% - 20px ); */
    min-height: 100%;

    width: 100%;
}
.container .container-list>li{
      min-height: 100%;
    width: 25%;
    float: left; 
        padding-bottom: 20px;

}


.container .content{

  width: 90%;
  margin: 0 auto;
  border-radius: 30rpx;
  overflow: hidden;
  padding: 10px;
  box-sizing: border-box;
  border: 1px solid #ccc;
  box-shadow: 3px 3px 5px 0 rgba(0, 0, 0, 0.2);
  background-color: #fff
}

.container  .content li{
  display: block;
  padding: 10px;
  font-size: 16px;
  text-align: center;
}


.container .illustration{
  position: relative;
  width: 100%;
  overflow: hidden;
    padding: 33px 33px 0 ;
  box-sizing: border-box;
  }
.container .illustration image{
  
  padding:20px 0;
  width: 70px;
  height: 70px;
  display: block;
  margin: 0 auto;
}

.illustration p{
  margin-bottom: 10px;
  font-size: 18px;
  font-weight: bold;
  text-indent: 1cm;

}

.illustration ul{
  position: relative;

  top: 10px;
  overflow: hidden;
  padding-top: 20px;
  margin-top: 20px;
  transform: translateY(10px)
}
.illustration ul li{
    display: block;
    width: 80%;
    padding-left: 23%;
    font-size: 16px;
}
.illustration ul i{
  display: block;
  position: relative;
  padding-top: 15px;
  top: -100px;
  left: 0px;
  width: 50px;
  height: 35px;
  color: white;
  font-size: 12px;
  text-align: center;
    border: 2px solid #fff;
  border-radius: 20px;
  
}

.illustration ul i:nth-child(3){
  top: -75px;
}



.illustration ul i em{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: -10px;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  color: white;
  border: 2px solid #fff;
  font-weight:800;
}

.illustration {
  height: 420px
}
