page{
    width: 100%;
    height: 100%;
    overflow-x: hidden;
}
.header{
    position: absolute;
    z-index: 1999;
    margin-bottom: 30rpx;
    height: 21%;
    width: 100%;
    background-color: rgba(23, 24, 35, 0.979);
    overflow: hidden;
}
.header .search{
    height: 50%;
}
.header .search .input-wrapper{
    float: left;
    padding: 30rpx 30rpx 0 30rpx;
    width: 80%;
    height: 100%;
    font-size: 30rpx;
    box-sizing: border-box;
    
}
.header .search .input-wrapper input{
    border-radius: 12rpx;
    height: 100%;
    color: #fff;
    padding-left: 30rpx;
    background-color: #323446;
}
.header .search .btn-wrapper{
    float: left;
    padding: 30rpx 30rpx 0 30rpx;
    padding-left: 0;
    width: 20%;
    height: 100%;
    font-size: 30rpx;
    box-sizing: border-box;
}
.header .search .btn-wrapper input{
    display: block;
    height: 100%;
    border-radius: 12rpx;
    text-align: center;
    /* padding-left: 30rpx; */
    background-color: orange;
}

.header .category{
    position: relative;
    height: 30%;
}
.header .category ul{
    width: 100%;
    transition: all 1s ease;
    position: absolute;
    top: 20rpx;
    overflow: hidden;
}
.header .category ul li{
    float: left;
    display: block; 
    width: 25%;
    padding-left: 40rpx;  
    padding-top: 10rpx; 
    box-sizing: border-box;
    color: #aaa;
}

.header .category ul li p{
    vertical-align: bottom;

    line-height: 1.5;
    font-size: 32rpx;
    font-family: '微软雅黑',sans-serif;
    font-weight: 500;

}
